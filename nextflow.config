process {
    withName:aoflagger {
        executor = 'slurm'
        queue = 'skylake-himem'
        container = 'pmkeller/imaging-tools'
        cpus = 1
        time = '5m'
    }

    withName:getRegions {
        executor = 'slurm'
        queue = 'skylake'
        cpus = 1
        time = '10m'
    }

    withName:wscleanInspect {
        executor = 'slurm'
        container = 'pmkeller/imaging-tools'
        cpus = 4
        memory = '12GB'
        time = '15m'
    }

    withName:wscleanDirty {
        executor = 'slurm'
        queue = 'skylake-himem'
        container = 'pmkeller/imaging-tools'
        time = '10m'
    }

    withName:wscleanStokesV {
        executor = 'slurm'
        queue = 'skylake-himem'
        container = 'pmkeller/imaging-tools'
        time = '10m'
    }

    withName:wsclean {
        executor = 'slurm'
        queue = 'skylake-himem'
        container = 'pmkeller/imaging-tools'
        time = '90m'
    }

    withName:predict {
        executor = 'slurm'
        queue = 'skylake-himem'
        container = 'pmkeller/imaging-tools'
        time = '10m'
    }

    withName:imageOutliers {
        executor = 'slurm'
        queue = 'skylake-himem'
        container = 'pmkeller/imaging-tools'
        time = '60m'
    }

    withName:subtractOutliers {
        executor = 'slurm'
        queue = 'skylake-himem'
        container = 'pmkeller/imaging-tools'
        time = '30m'
    }

    withName:flagRFI {
        executor = 'slurm'
        queue = 'skylake-himem'
        container = 'pmkeller/imaging-tools'
        cpus = 1
        memory = '12GB'
        time = '15m'
    }

    withName:selfCal {
        executor = 'slurm'
        queue = 'skylake-himem'
        container = 'pmkeller/imaging-tools'
        cpus = 1
        memory = '12GB'
        time = '15m'
    }
}

apptainer {
    enabled = true
    autoMount = true
}

conda {
    enabled = true
}

executor {
    queueSize = 12
}